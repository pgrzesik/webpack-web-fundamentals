{
  "scripts": {
    "build:watch:dev": "yarn build:watch -- --env.env=dev",
    "build:watch": "yarn build -- --watch",

    "build:dev:firstplugin": "yarn build:dev -- --env.addons=firstplugin",
    "build:dev:bundleanalyze": "yarn build:dev -- --env.addons=bundleanalyze",
    "build:dev": "yarn build -- --env.env=dev",
    
    "debug:dev": "yarn debug -- --env.env=dev",

    "debug": "node --inspect --debug-brk ./node_modules/webpack/bin/webpack.js",
    "build": "node ./node_modules/webpack/bin/webpack.js"
  },
  "devDependencies": {
    "webpack": "^3.3.0",
    "webpack-bundle-analyzer": "^2.8.3",
    "webpack-dev-server": "^2.6.1",
    "webpack-merge": "^4.1.0"
  }
}
